<Defaults>
  <Text font="fonts/Goudy" />
  <Text class="primaryText" font="fonts/Goudy" color="White" resizeTextForBestFit="True" />
  <Text class="OptionText" font="fonts/Goudy" fontSize="20" color="White" Width="250" alignment="MiddleLeft" resizeTextForBestFit="False" />
  <Text class="OptionButton" font="fonts/Goudy"  fontSize="20" color="White" Width="180" alignment="MiddleLeft" resizeTextForBestFit="False"/>
  <TableLayout class="BaseTable" width="1000" height="550" columnWidths="1000" cellPadding="0" />
  <TableLayout class="MainTable" width="1000" height="550" columnWidths="500 500" cellPadding="0" />
  <TableLayout class="RightTable" width="500" height="410" cellPadding="0" />
  <TableLayout class="BotTable" width="1000" height="340" columnWidths="300 200 300 200" cellPadding="0" />
  <TableLayout class="OptTable" width="500" height="1200" columnWidths="300 200" cellPadding="0" />
  <Row class="MainTableRow" preferredHeight="70" />
  <Row class="MainContentRow" preferredHeight="410" />
  <Row class="RightContentRow" preferredHeight="340" />
  <Cell dontUseTableCellBackground="true" cellBackgroundColor="clear"/>
  <Toggle class="playercount" font="fonts/Goudy" rectalignment="MiddleLeft" preferredHeight="50" textcolor="White" resizeTextForBestFit="True" isOn="False" onValueChanged="ui_num_players_filter"/>
  <Button padding="55 0 0 0" minHeight="70" image="button" active="True" preserveAspect="True"/>
  <Button class="scenario" onClick="Global/ui_select_scenario" active="False"/>
  <Button class="variant"  onClick="Global/ui_select_variant" active="False"/>
  <Button class="bot" onClick="Global/ui_toggle_bot"/>
  <Button class="option" onClick="Global/ui_toggle_option"/>
  <Row class="option" onClick="Global/ui_show_option_info" />
</Defaults>

<Panel id="scenario" image="background" width="1430" height="906" active="false">
